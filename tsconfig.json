{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true /*This is for "path" module import*/,
    "resolveJsonModule": true /* Specify the base directory to resolve non-relative module names. */,
    "paths": {
      /* Specify a set of entries that re-map imports to additional lookup locations. */
      "@requestHandler": ["./requestHandler.ts"],
      "@auth": ["./auth.json"],
      "@employee-payload/*": ["./api-payloads/employee/*"],
      "@utils/*": ["./utilities/*"],
      "@authentication": ["./authentication"],
      "@api-requests": ["./api-requests/central-index.ts"],
      "@api-payloads/*": ["./api-payloads/*"],
      "@data/testData/*": ["./data/testData/*"]
    }
  }
}
